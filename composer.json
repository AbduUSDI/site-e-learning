{
    "name": "votre-nom/e-learning",
    "description": "Une plateforme e-learning en PHP utilisant Bootstrap, MySQL et MongoDB.",
    "type": "project",
    "require": {
        "php": ">=7.3",
        "monolog/monolog": "^2.3",
        "phpmailer/phpmailer": "^6.5",
        "mongodb/mongodb": "^1.9"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "functions/"
        }
    },
    "scripts": {
        "test": "phpunit"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
