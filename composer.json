{
    "name": "votre-nom/e-learning",
    "description": "Une plateforme e-learning en PHP utilisant Bootstrap, MySQL et MongoDB.",
    "type": "project",
    "require": {
        "phpmailer/phpmailer": "^6.5",
        "monolog/monolog": "^2.0",
        "nesbot/carbon": "^2.0",
        "mongodb/mongodb": "^1.6",
        "slim/slim": "^4.0",
        "respect/validation": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "App/"
        }
    },
    "scripts": {
        "test": "phpunit"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
